<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- 상단 바 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <!-- 로고 이미지 -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약알림"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/iv_logo"
            android:layout_centerVertical="true"
            android:paddingStart="8dp"
            android:textStyle="bold" />

        <!-- 설정 버튼 -->
        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_settings"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="설정"
            android:padding="4dp" />
    </RelativeLayout>

    <!-- 텍스트 검색 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="약 이름 또는 효능(증상) 입력"
            android:padding="12dp"
            android:background="@drawable/search_background"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:minHeight="48dp" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_search"
            android:contentDescription="검색"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />
    </LinearLayout>

    <!-- 최근 검색 기록 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최근에 검색한 약"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recent_searches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/light_gray" />

    <!-- 알림 설정 및 알약 인식 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <!-- 알림 설정 버튼 -->
        <Button
            android:id="@+id/btn_alarm_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림 설정"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginEnd="8dp" />

        <!-- 알약 인식 버튼 -->
        <Button
            android:id="@+id/btn_recognize_pill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알약 인식"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- 마이페이지 -->
    <Button
        android:id="@+id/btn_my_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:layout_marginTop="16dp" />

    <!-- 복용 약 관리 버튼 추가 -->
    <Button
        android:id="@+id/btn_manage_drugs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="복용 약 관리"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:layout_marginTop="16dp" />
</LinearLayout>
